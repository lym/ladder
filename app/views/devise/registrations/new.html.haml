/%h4 Sign up
#request-invite.modal{:style => "display: #{@user.errors.any? ? 'block' : 'none'};"}
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
    .modal-header
      %a.close{"data-dismiss" => "modal"} &#215;
      %h3 Sign up
    .modal-body
      = f.error_notification

      = f.label :name 
      = f.text_field :name

      = f.label :email
      = f.email_field :email

      = f.label :password
      = f.password_field :password

      = f.label :password_confirmation
      = f.password_field :password_confirmation

    .modal-footer
      = f.submit "Sign up", :class => "btn btn-primary", :id => 'invitation_button'
      %a.btn{"data-dismiss" => "modal", :href => "#"} Close
#romance-copy{:style => "text-align: center; margin-top: 80px"}
  %h2 Sign up?
#call-to-action{:style => "text-align: center; margin-top: 80px"}
  %a.btn.btn-primary.btn-large{"data-toggle" => "modal", :href => "#request-invite"} Sign up

  /= render "devise/shared/links"
